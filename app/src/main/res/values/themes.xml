<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="Theme.VirtualPeer.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Attribute values -->
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundDark">@color/colorBackgroundDark</item>
        <item name="colorBackgroundCard">@color/colorBackgroundCard</item>
        <item name="colorSelectedCard">@color/colorSelectedCard</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
        <item name="colorRipple">@color/colorRipple</item>
        <item name="colorIconTint">@color/colorIconTint</item>
        <item name="colorListDivider">@color/colorListDivider</item>

        <!-- Text colors (including attributes) -->
        <item name="textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>

        <item name="subTextColor">@color/colorSubText</item>
        <item name="android:textColorSecondary">@color/colorSubText</item>
        <item name="android:textColorTertiary">@color/colorSubText</item>

        <item name="buttonTextColor">@color/colorButtonText</item>

        <!-- Widgets -->
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="borderlessButtonStyle">@style/BorderlessButtonStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>

        <!-- Preferences -->
        <item name="preferenceTheme">@style/PreferenceTheme</item>

        <!-- Other styles -->
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>

    </style>

    <!-- Light theme -->
    <style name="Theme.VirtualPeer" parent="Theme.VirtualPeer.Base">

        <!-- Not overriding anything here for now -->

    </style>

    <!-- Used for the AppCompat ActionBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">?attr/colorBackground</item>
        <item name="colorControlHighlight">?attr/colorRipple</item>
    </style>

    <!-- NoActionBar theme, used for activities in the manifest -->
    <style name="Theme.VirtualPeer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Preference style (just used to have the icons colored correctly) -->
    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:tint">@color/colorIconTint</item>
    </style>

    <!-- CardView style -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorBackgroundCard</item>
    </style>

    <!-- MaterialCardView style (the style is essentially the same as the one above; only the parent is different) -->
    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorBackgroundCard</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <!-- Borderless button style (buttons where nothing but the text is visible) -->
    <style name="BorderlessButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Check box style -->
    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorSubText</item>
    </style>

    <!-- Radio button style -->
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorSubText</item>
    </style>

    <!-- Splash screen style -->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>