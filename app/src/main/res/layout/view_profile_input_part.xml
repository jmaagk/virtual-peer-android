<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.5dp"
        android:layout_marginStart="10dp"
        tools:text="@string/lorem_ipsum_short" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="100"
        android:background="@drawable/round_edittext"
        android:textColor="@color/colorTextEditTextSettings"
        android:textCursorDrawable="@drawable/round_edittext_cursor_settings"
        android:backgroundTint="@color/colorEditTextSettings" />

</LinearLayout>